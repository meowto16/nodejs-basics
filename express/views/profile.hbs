<h1>Профиль</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl }}
        <img class="avatar" src="{{user.avatarUrl}}" alt="">
        {{else}}
        <p>Аватара нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.email}}</strong></p>
            <br>
            <div class="input-field">
                <input name="name" type="text" placeholder="Введите имя" id="name" class="validate" value="{{ user.name }}" required>
                <label for="name">Имя пользователя </label>
                <span class="helper-text" data-error="Имя не может быть пустым"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Аватар</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input type="text" class="file-path validate" value="{{ user.avatar }}">
                </div>
            </div>

            <input type="hidden" name="_csrf" value="{{ csrf }}">

            <button class="btn btn-primary" type="submit">Изменить</button>
        </form>
    </div>
</div>
