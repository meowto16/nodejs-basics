<div class="row">
    <div class="col s6 offset-s3">
        <h2 class="center-align">Восстановление пароля</h2>
        {{#if error }}
            <p class="alert">{{ error }}</p>
        {{/if}}
        <form action="/auth/reset" method="POST">
            <div class="row">
                <div class="col s12">
                    <div class="input-field">
                        <input name="email" type="email" placeholder="login@mail.ru" id="email" class="validate"
                               required>
                        <label for="email">E-Mail</label>
                        <span class="helper-text" data-error="Введите E-Mail"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn btn-primary" type="submit">Сброс</button>
        </form>
    </div>
</div>
